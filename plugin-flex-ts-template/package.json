{
  "name": "plugin-flex-js-template",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "postinstall": "flex-plugin pre-script-check",
    "test:watch": "jest --watch",
    "test:mychanges": "jest --onlyChanged",
    "test:precommit": "jest",
    "test:ci": "jest --silent --ci --coverage --coverageReporters=cobertura --reporters=default --reporters=jest-junit --testResultsProcessor=jest-junit",
    "test:coverage": "jest --silent --coverage && http-server -c-1 ./coverage -o /lcov-report",
    "lint": "eslint --ext js ./src/*.*",
    "lint:fix": "npm run lint -- --fix"
  },
  "dependencies": {
    "@types/jest": "^26.0.20",
    "flex-plugin": "^4.3.4",
    "flex-plugin-scripts": "4.1.3",
    "lodash": "^4.17.20",
    "react": "16.5.2",
    "react-dom": "16.5.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-private-methods": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@twilio/flex-ui": "1.29.1",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^8.12.0",
    "eslint-config-twilio": "^2.0.0",
    "jest": "^26.0.20",
    "jest-fetch-mock": "3.0.3",
    "jest-junit": "12.0.0",
    "typescript": "^3"
  },
  "jest": {
    "clearMocks": true,
    "automock": false,
    "testResultsProcessor": "jest-junit",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "cobertura"
    ],
    "globalSetup": "<rootDir>/globalSetupTests.js",
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ]
  },
  "jest-junit": {
    "outputDirectory": "./test-results"
  }
}
